@{
    ViewData["Title"] = "View Profile";
}

<h1>@ViewBag.Profile.username</h1>
<hr>
<div class="Profileinfo">
    <!-- FIRST NAME AND BIO ONLY IF THIS ISN'T CURRENT USER -->
    <table>
        <tr>
            <td class="infolabel">Name:</td>
            <td>@ViewBag.Profile.first_name @ViewBag.Profile.last_name</td>
        </tr>
        <tr>
            <td class="infolabel">Bio:</td>
            <td>@ViewBag.Profile.bio</td>
        </tr>
    </table>
    <a href=""><button style="margin-top: 30px;" class="simpleMar btn btn-default btn-lg">Manage Goals</button></a>
    <a href=""><button class="simpleMar btn btn-default btn-lg">Manage Groups</button></a>
    <a href=""><button class="simpleMar btn btn-default btn-lg">Edit Profile</button></a>
</div>
<div class="profstuff">
    <h4>Goals</h4>
    <ul>
        <li>
            <h4><a href="/">[GOAL]</a></h4><br>
            Starts: [START DATE, IF ANY]<br>
            Ends: [END DATE]<hr class="namediv">
        </li>
    </ul>
    <hr class="namediv">
    <h4>Groups</h4>    
    <ul>
        <li><h4><a href="/">[GROUP NAME]</a></h4> - <span class="grpmb">[NUM] members</span></li>
    </ul>
</div>