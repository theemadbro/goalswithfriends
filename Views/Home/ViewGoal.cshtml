@{
    ViewData["Title"] = "View Goal";
}
<h1>Goal Information</h1>
<div class="profileinfo">
    <table>
        <tr>
            <td class="infolabel">Goal:</td>
            <td>@ViewBag.Profile.goal</td>
        </tr>
        <tr>
            <td class="infolabel">Description:</td>
            <td>@ViewBag.Profile.desc</td>
        </tr>
        <tr>
            <td class="infolabel">Start Date:</td>
            <td>@ViewBag.Profile.startDate.ToString("MMM dd, yyyy")</td>
        </tr>
        <tr>
            <td class="infolabel">End Date:</td>
            <td>@ViewBag.Profile.endDate.ToString("MMM dd, yyyy")</td>
        </tr>
    </table>
    <!-- HIDE IF THIS GOAL DOES NOT BELONG TO CURRENT USER -->
    <form action="/profile/@ViewBag.Profile.usersid/@ViewBag.Profile.id/delete" method="POST">
        <button style="margin-top: 30px;" class="simpleMar btn btn-default btn-lg">Delete Goal</button>
    </form>
</div>